 &initialization_parameters

!
!-- Grid
!------------------------------------------------------------------------------
    nx                   = 19,
    ny                   = 19,
    nz                   = 60,

    dx                   = 2.0,
    dy                   = 2.0,
    dz                   = 2.0,

!
!-- Numerics
!------------------------------------------------------------------------------
    fft_method           = 'fftw',
    monotonic_limiter_z  = .T.,
!
!-- Mode
!------------------------------------------------------------------------------
    humidity             = .T.,
    q_surface            = 0.001,

!
!-- Initialization
!------------------------------------------------------------------------------
    initializing_actions = 'read_from_file set_constant_profiles',   !'set_constant_profiles', or 'read_from_file',
                                                                     ! or both (met. from inifor, chem constant profiles)

    pt_surface           = 277.15,
    ug_surface           = 1.0,
    vg_surface           = 0.0,

    origin_date_time     = '2019-03-06 10:00:00 +00'

!
!-- Wall/soil spinup
!------------------------------------------------------------------------------
